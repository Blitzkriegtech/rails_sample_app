<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |form| %>

      <%= form.label :email %>
      <%= form.email_field :email, autocomplete: "email", placeholder: "your@email.com", class: "form-control" %>

      <%= form.label :password %>
      <%= form.password_field :password, autocomplete: "current-password", placeholder: "your password here", class: "form-control" %>

    
      <%= form.label :remember_me, class: "checkbox" do %>
        <%= form.check_box :remember_me, id: "session_remember_me" %>
        <span>Keep me logged in</span>
      <% end %>

      <%= form.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!",  signup_path%></p>
  </div>
</div>